<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MiembrosActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/fondo_textura_azul_1"
        android:layout_gravity="center_horizontal">
        <ImageButton
            android:id="@+id/btn_regresar_check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/regresar_blanco"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="CheckList"/>
    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="80dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="40dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:textColor="@color/morado"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:text="Pendientes del Proyecto" />
       <ImageButton
           android:id="@+id/btn_borrar_checklist"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginStart="70dp"
           android:src="@drawable/basura_violeta"
           android:scaleType="centerInside"
           android:padding="3dp"
           android:background="@android:color/transparent"
           android:layout_gravity="center"
           />
   </LinearLayout>

     <androidx.cardview.widget.CardView
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:layout_marginHorizontal="40dp"
         app:cardCornerRadius="10dp"
         android:elevation="8dp">
    <GridView
        android:id="@+id/gv_checklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
     </androidx.cardview.widget.CardView>

</LinearLayout>